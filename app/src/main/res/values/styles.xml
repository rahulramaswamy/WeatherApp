<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TabWidgetTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryDarker</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:textColorPrimary">@color/colorSecondaryLight</item>
        <item name="android:textColorSecondary">@color/colorSecondaryMid</item>
        <item name="android:background">@color/colorPrimaryDarker</item>
    </style>
</resources>
